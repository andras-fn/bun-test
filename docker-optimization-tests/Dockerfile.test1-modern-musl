# Test 1: Modern + musl + bytecode (optimal performance)
FROM oven/bun:1.3-alpine AS builder

WORKDIR /app
COPY package.json bun.lockb* ./
COPY packages/database ./packages/database
COPY apps/api ./apps/api
RUN bun install --frozen-lockfile

WORKDIR /app/apps/api
RUN echo "=== Test 1: Modern + musl + bytecode ===" && \
    bun build src/index.ts \
    --compile \
    --outfile=app \
    --target=bun-linux-x64-musl-modern \
    --minify \
    --sourcemap \
    --bytecode \
    --define:process.env.NODE_ENV=\"production\" && \
    chmod +x app && \
    echo "Size: $(du -h app)"

# Minimal Alpine (musl) runtime
FROM alpine:3.19
RUN apk add --no-cache libstdc++ libgcc && \
    rm -rf /var/cache/apk/* && \
    adduser -D -s /sbin/nologin -u 1000 app

WORKDIR /app
COPY --from=builder /app/apps/api/app ./app
RUN chown app:app ./app

USER app
EXPOSE 3001
CMD ["./app"]