{
    "name": "todo-monorepo",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "dev": "bun --filter '*' dev",
        "dev:web": "bun run --filter web dev",
        "dev:api": "bun run --elide-lines=0 --filter api dev",
        "build": "bun run build:web && bun run build:api",
        "build:web": "bun run --filter web build",
        "build:api": "bun run --filter api build",
        "start": "NODE_ENV=production bun run --filter api start",
        "docker:build": "docker-compose build",
        "docker:up": "docker-compose up -d",
        "docker:up:auto-migrate": "docker-compose up -d",
        "docker:up:manual": "docker-compose up -d --scale migrate=0",
        "docker:down": "docker-compose down",
        "docker:logs": "docker-compose logs -f",
        "docker:dev": "docker-compose up",
        "db:migrate:docker": "docker-compose exec api bun run db:migrate",
        "db:generate": "bun run --filter @repo/database generate",
        "db:migrate": "bun run --filter @repo/database migrate",
        "db:push": "bun run --filter @repo/database push",
        "db:studio": "bun run --filter @repo/database studio",
        "type-check": "bun run --filter=* type-check"
    },
    "devDependencies": {
        "@types/bun": "^1.3.0",
        "@types/node": "^20.0.0",
        "typescript": "^5.0.0"
    },
    "dependencies": {}
}